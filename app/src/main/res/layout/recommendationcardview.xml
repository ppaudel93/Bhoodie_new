<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/testcardview"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/testphoto"
                android:layout_width="170dp"
                android:layout_height="179dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/testtext"
                android:layout_width="136dp"
                android:layout_height="52dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/testphoto"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/testsubtext"
                android:layout_width="137dp"
                android:layout_height="53dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/testtext"
                android:layout_marginTop="61dp"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/cardviewbutton"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/testphoto"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:background="@drawable/roundedbutton"
                android:src="@drawable/gotomap" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/strokecolor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="top"
            android:background="@color/strokecolor" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/strokecolor" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/strokecolor" />

    </android.support.v7.widget.CardView>

</LinearLayout>